
# ============================================================================
# REQUIRED - Get your free API key from https://console.groq.com/keys
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here

# ============================================================================
# OPTIONAL - Database Configuration (defaults work fine)
# ============================================================================
# Database type: sqlite, postgresql, or mysql
DB_TYPE=sqlite

# SQLite configuration (default)
DB_PATH=./data/business.db

# PostgreSQL configuration (uncomment if using PostgreSQL)
# DB_TYPE=postgresql
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=business_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here

# MySQL configuration (uncomment if using MySQL)
# DB_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=business_db
# MYSQL_USER=root
# MYSQL_PASSWORD=your_password_here

# ============================================================================
# OPTIONAL - LLM Settings (defaults work fine)
# ============================================================================
LLM_MODEL=llama-3.3-70b-versatile
TEMPERATURE=0.1
MAX_TOKENS=2048

# ============================================================================
# OPTIONAL - RAG Settings (defaults work fine)
# ============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_STORE_TYPE=faiss
VECTOR_STORE_PATH=./data/vector_stores
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SEARCH_K=8

# ============================================================================
# OPTIONAL - Server Settings (defaults work fine)
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ============================================================================
# OPTIONAL - CSV Hybrid Processing (defaults work fine)
# ============================================================================
ENABLE_HYBRID_CSV=True
CSV_PROCESSING_MODE=hybrid
CSV_AUTO_IMPORT_SQL=True
CSV_AUTO_INDEX_RAG=True
CSV_TABLE_PREFIX=upload_

# ============================================================================
# OPTIONAL - Feature Flags (defaults work fine)
# ============================================================================
ENABLE_MCP=True
ENABLE_A2A=True
ENABLE_CACHING=False

# ============================================================================
# OPTIONAL - Logging (defaults work fine)
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# OPTIONAL - Session Settings (defaults work fine)
# ============================================================================
SESSION_TIMEOUT=3600